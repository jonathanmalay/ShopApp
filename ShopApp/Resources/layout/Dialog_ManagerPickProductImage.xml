
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
	android:background="@drawable/circlelayout"
    android:layout_height="wrap_content">


	<TextView
		android:text=" בחירת תמונת מוצר"
		android:layout_marginVertical="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/colorAccent"
		android:gravity="center"
		android:textStyle="bold"
		android:textSize="22dp"/>

    <Button
		android:text="בחירה מהגלרייה"
		android:padding="17dp"
		android:layout_margin="10dp"
		android:layout_width="wrap_content"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
		android:background="@drawable/circlebutton"
		android:textColor="@android:color/white"
		android:id="@+id/btn_DialogPickProductImage_PickFromGallery"
		android:textStyle="bold"/>
		<TextView
		android:text=":אפשרות שנייה"
		android:layout_marginVertical="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/colorAccent"
		android:gravity="center"
		android:textStyle="bold"/>
		
	

	<EditText
		android:hint=" הכנס קישור לתמונה "
		android:textColorHint="@color/colorAccent"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		
		android:layout_margin="10dp"
		android:id="@+id/et_DialogPickProductImage_EnterImageUrl"
		
	    android:elevation="4dp"
		android:textColor="@color/colorEditTextBackground"
		android:layout_marginHorizontal="18dp"
		/>


	<Button
		android:text="הורד תמונה  מהקישור"
		android:layout_width="wrap_content"
		android:layout_gravity="center"
		android:padding="17dp"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:background="@drawable/circlebutton"
		android:id="@+id/btn_DialogPickProductImage_GetImageFromUrl"
		android:textColor="@android:color/white"
		android:textStyle="bold"/>



	<ImageView
		android:src="@android:drawable/sym_def_app_icon"
		android:id="@+id/imageView_DialogPickProductImage"
		android:layout_gravity="center"
		android:foregroundGravity="center"
		android:layout_height="200px"
		android:layout_width="match_parent" />
		<Button
		android:text="@string/save"
		android:layout_marginVertical="15dp"
		android:layout_width="150dp"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
		android:background="@drawable/circlebutton"
		android:id="@+id/btn_DialogPickProductImage_SaveDialog"
		android:textColor="@android:color/white"
		android:textStyle="bold"/>

</LinearLayout>