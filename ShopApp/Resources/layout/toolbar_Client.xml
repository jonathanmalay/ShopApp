
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_client_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    android:background="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mtrl_toolbar_default_height"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:weightSum="1">

        <ImageView
            android:background= "@drawable/iconappnew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"

            />



        <TextView
            android:text="@string/app_name"
            android:textStyle="bold"
            android:id="@+id/tv_toolbar_title"
            android:layout_width="0dp"
            
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textSize="22sp"
            android:textColor="@color/colorEditTextHint"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <Button
            android:text="@string/BackPage"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:elevation="7dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/circlebutton"
            android:id="@+id/btn_toolbar_backPage"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>

        <ImageButton
            android:textStyle="bold"
            android:layout_width="0dp"
            android:elevation="3dp"
            android:padding="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.15"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTint="@color/white"
            android:src="@drawable/icon_menu"
             android:id="@+id/btn_toolbar_menu"
            />

    </LinearLayout>

</android.support.v7.widget.Toolbar>