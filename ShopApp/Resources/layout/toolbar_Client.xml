
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/toolbar_client_home"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:minHeight="?attr/actionBarSize"
android:background="?attr/colorPrimary"
android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/mtrl_toolbar_default_height"
    android:orientation="horizontal"
    android:background="@color/colorAccent"
    android:weightSum="1">

        <ImageView
            android:background= "@drawable/iconappnew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            />





        <TextView
            android:text="@string/app_name"
            android:textStyle="bold"
            android:id="@+id/tv_toolbar_title"
            android:layout_width="0dp"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textColor="@color/colorEditTextHint"
            />

        <Button
            android:text="@string/BackPage"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_marginVertical="3dp"
            android:layout_marginRight="3dp"
            android:elevation="7dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
             
            
            android:textColor="@android:color/white"
            android:background="@drawable/circlebutton"
            android:id="@+id/btn_toolbar_backPage"
            />












    </LinearLayout>
    
</android.support.v7.widget.Toolbar>