<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1">


    
    <include layout="@layout/toolbar_client" 
    />

    <TextView
        android:text="פרטי משתמש"
        android:textColor="@color/colorTitele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/circlelayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextbackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconusername" />
            <EditText
                android:hint="@string/enter_username"
                android:textColorHint="@color/colorEditTextHint"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etEditAccuntSettingUsername" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbackground">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconfullname"/>

            <EditText
                android:hint="@string/fullName"
                android:textColorHint="@color/colorEditTextHint"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etEditAccuntSettingFullName" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbackground">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconphone"/>

            <EditText
                android:hint="@string/phone_number"
                android:textColorHint="@color/colorEditTextHint"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etEditAccuntSettingPhoneNumber" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbackground">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/icongmail"/>
            <EditText
                android:textColorHint="@color/colorEditTextHint"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etEditAccuntSettingEmail" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbackground">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconlocation"/>
            <EditText
                android:textColorHint="@color/colorEditTextHint"
                android:hint="עיר"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etEditAccuntSettingCity" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbackground">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconhomeaddress"/>
            <EditText
                android:textColorHint="@color/colorEditTextHint"
                android:hint="רחוב ומספר בית"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etEditAccuntSettingStreetAddress" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/circlebutton"
            android:text="@string/save"
            android:textColor="@color/colorEditTextHint"
            android:textStyle="bold"
            android:id="@+id/btnEditAccuntSettingConrifeEdit"/>
    </LinearLayout>


</LinearLayout>
