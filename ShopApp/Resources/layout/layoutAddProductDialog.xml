<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/circlebutton"
    android:backgroundTint="@color/colorEditTextHint"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="1dp"
    >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="right"
            android:id="@+id/btn_CloentOrderActivity_dialogAddProduct_CloseDialog"
            android:background="@android:drawable/ic_menu_close_clear_cancel"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/circlebutton"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="35sp"
            android:textColor="@color/colorEditTextHint"
            android:background="@android:color/transparent"
            android:id="@+id/btnDialogAddProductMinus"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorEditTextHint"
            android:background="@android:color/transparent"
            android:id="@+id/tvDialogAddProductCurrentAmount" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_weight="1"
            android:textSize="35sp"
            android:textColor="@color/colorEditTextHint"
            android:background="@android:color/transparent"
            android:id="@+id/btnDialogAddProductPlus"/>
    </LinearLayout>

    <Button
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textSize="35sp"
        android:textColor="@color/colorEditTextHint"
        android:background="@drawable/circlebutton"
        android:id="@+id/btnDialogAddProductSave"/>

</LinearLayout>