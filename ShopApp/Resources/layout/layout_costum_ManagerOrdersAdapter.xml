<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="5dp">

 <android.support.v7.widget.CardView
   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardBackgroundColor="@color/colorListViewCell"
    cardview:cardCornerRadius="8dp"
    cardview:cardElevation="8dp"
    cardview:cardUseCompatPadding="true">

    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_costum_ManagerOrdersAdapterIsDeliverd"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/Is_Deliverd"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_costum_ManagerOrdersAdapterDate"
            android:textSize="20sp"
            android:text="@string/Date"
            android:textStyle="bold"
            android:textColor="@color/colorAccent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_costum_ManagerOrdersAdapterUsername"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/enter_username"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_costum_ManagerOrdersAdapterPhoneNum"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/phone_number"
            android:textColor="@color/colorPrimary" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_costum_ManagerOrdersAdapterCity"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/City"
            android:textColor="@color/colorPrimary" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_costum_ManagerOrdersAdapterAddress"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/Address"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tv_costum_ManagerOrdersAdapterPrice"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=":מחיר" />

    </LinearLayout>

</android.support.v7.widget.CardView>
   
    </LinearLayout>
