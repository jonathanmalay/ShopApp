<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circlebutton"
        android:text="מעבר לתשלום"
        android:textColor="@color/colorEditTextHint"
        android:textStyle="bold"
        android:layout_marginVertical="7dp"
       
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:layout_marginRight="20dp"
        android:drawableLeft = "@drawable/checkout"
        android:id="@+id/btnClientOrderLayoutMoveToPayment"/>

    <Button
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="wrap_content"
        android:text="@string/BackPage"
        android:textStyle="bold"
        android:textColor = "@color/colorEditTextHint"
        android:background = "@drawable/circlebutton"
        android:layout_marginVertical="7dp"
        android:id="@+id/btnClientOrderGoBack"/>
    </LinearLayout>


    <ListView
        android:id="@+id/listViewProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>