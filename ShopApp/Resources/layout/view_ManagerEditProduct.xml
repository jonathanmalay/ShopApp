
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/circlelayout"
    android:gravity="center"
    android:weightSum="100">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:elevation="3dp"
        android:text="שם המוצר"
        android:id="@+id/tv_manager_dialog_editProduct_ProductName"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold"

            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם המוצר "
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:layout_marginHorizontal="10dp"
        
        />

    <EditText
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:hint= "שם המוצר"
        android:gravity="center"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/et_ManagerEditProductDialogProductName"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מחיר המוצר"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:layout_marginHorizontal="10dp"
        
        />


    <EditText
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:hint= "מחיר"
        android:inputType="number"
        android:gravity="center"
        android:id="@+id/et_ManagerEditProductDialogProductPrice"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="כמות במארז"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:layout_marginHorizontal="10dp"
        
        />

    <EditText
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:hint= "כמות במארז"
        android:inputType="number"
        android:gravity="center"
        android:id="@+id/et_ManagerEditProductDialogProductQuantity"
            />

    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="קוד המוצר"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:layout_marginHorizontal="10dp"
        
        />

    <EditText
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:hint= "קוד מוצר "
        android:inputType="number"
        android:gravity="center"
        android:id="@+id/et_ManagerEditProductDialogProductCode"
            />


    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="תמונת מוצר"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
                >
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:background="@drawable/circlebutton"
                android:text="בחר תמונה"
                android:textSize="18sp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/btn_Managerdialog_edit_product_ChooseImage"
                    />
            <ImageView
                android:src="@drawable/icon_home"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:id="@+id/iv_dialog_edit_product_image"
                    />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="10">

        <Button
            android:id="@+id/btn_ManagerEditProductDialogDeleteProduct"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/circlebutton"
            android:elevation="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="הסר מוצר"
            android:textColor="@color/colorEditTextHint"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            />
        <Button
            android:id="@+id/btn_ManagerEditProductDialogSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/circlebutton"
            android:elevation="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/save"
            android:textColor="@color/colorEditTextHint"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            />
    </LinearLayout>
</LinearLayout>