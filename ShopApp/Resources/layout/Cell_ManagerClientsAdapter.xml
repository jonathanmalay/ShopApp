<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white">

     <android.support.v7.widget.CardView   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardBackgroundColor="@color/colorListViewCell"
        cardview:cardCornerRadius="10dp"
        cardview:cardElevation="8dp"
        android:layout_margin="10dp"
        cardview:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:orientation="horizontal"
            android:background="@drawable/frame_cell"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="0.5">
                
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circlebutton"
                    android:text="חייג ללקוח"
                    android:textSize="17dp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/colorEditTextHint"
                    android:drawableLeft="@drawable/iconphone"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                </LinearLayout>

            

            <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5">

                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="שם הלקוח"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    android:layout_gravity="center_horizontal"
                    android:id="tv_costum_ManagerClientsAdapterUsername"
                    />
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="עיר"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    android:layout_gravity="center_horizontal"
                    android:id="tv_costum_ManagerClientsAdapterCity"
                    />
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="כתובת מגורים"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    android:layout_gravity="center_horizontal"
                    android:id="tv_costum_ManagerClientsAdapterAddress"
                    />


        </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
   

</LinearLayout>
