
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
    android:background="@drawable/circlebutton"
    android:backgroundTint="@color/colorEditTextHint"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:elevation="15dp"
    android:layout_height="wrap_content">



       <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
         
            android:text="@string/orders_conrife_conditions"
            android:gravity="center"

            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@android:color/transparent"
            android:id="@+id/tv_DialogFinishOrderConrifeTerms" />


     <Button
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Conrife_Order"
        android:textSize="35sp"
        android:textColor="@color/colorEditTextHint"
        android:background="@drawable/circlebutton"

        android:id="@+id/btn_DialogFinishOrderConrife"/>

</LinearLayout>