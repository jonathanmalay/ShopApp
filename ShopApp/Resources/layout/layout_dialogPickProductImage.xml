
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
		android:text="בחירת תמונה מהגלרייה"
		android:layout_margin="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/circlebutton"
		android:textColor="@android:color/white"
		android:id="@+id/btn_DialogPickProductImage_PickFromGallery"
		android:textStyle="bold"/>
		<TextView
		android:text=":אפשרות שנייה"
		android:layout_marginVertical="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/colorAccent"
		android:gravity="center"
		android:textStyle="bold"/>
		<EditText
		android:hint=" הכנס קישור לתמונה "
		android:textColorHint="@color/colorEditTextHint"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:id="@+id/et_DialogPickProductImage_EnterImageUrl"
		android:background="@color/colorEditTextBackground"
		android:textColor="@color/colorEditTextHint"
		android:layout_marginHorizontal="15dp"
		android:textStyle="bold"/>
	<Button
		android:text="העלאה מהקישור"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:background="@drawable/circlebutton"
		android:id="@+id/btn_DialogPickProductImage_GetImageFromUrl"
		android:textColor="@android:color/white"
		android:textStyle="bold"/>
	<ImageView
		android:src="@android:drawable/sym_def_app_icon"
		android:id="@+id/imageView_DialogPickProductImage"
		android:layout_gravity="center"
		android:foregroundGravity="center"
		android:layout_height="200px"
		android:layout_width="match_parent" />
		<Button
		android:text="@string/save"
		android:layout_marginTop="10dp"
		android:layout_width="wrap_content"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
		android:background="@drawable/circlebutton"
		android:id="@+id/btn_DialogPickProductImage_SaveDialog"
		android:textColor="@android:color/white"
		android:textStyle="bold"/>

</LinearLayout>