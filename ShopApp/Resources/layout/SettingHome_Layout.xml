
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1">

    <include
        android:id="@id/toolbar_client_home"
        layout="@layout/toolbar_client" 
    />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:background ="@drawable/circlelayout"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/circlebutton"
            android:paddingHorizontal="10dp"
            android:elevation="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconfullname"
                 />
            <Button
                android:id="@+id/btnSettingEtitdetails"
                android:text="ערוך פרטי משתמש"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"
/>
        </LinearLayout>
        <LinearLayout
            android:elevation="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/circlebutton"
            android:paddingHorizontal="10dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconsettingpay"/>
            <Button
                android:text="ערוך פרטי אשראי"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"
                android:id="@+id/btnSettingPaymentMethods"/>
        </LinearLayout>
        <LinearLayout
            android:elevation="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/circlebutton"
            android:paddingHorizontal="15dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconpassword"/>
            <Button
                android:text="שנה סיסמא"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"
                android:id="@+id/btnSettingChangePassword"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>