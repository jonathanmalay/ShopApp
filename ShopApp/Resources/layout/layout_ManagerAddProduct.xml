
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/circlelayout"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_client"/>

    <ImageView
        android:src="@drawable/iconappnew"
        android:id="@+id/ivManagerAddProductImage"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_height="300px"
        android:layout_width="wrap_content" />

   

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etManagerAddProductName"
        android:hint="שם המוצר"
    />

    <EditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:id="@+id/etManagerAddProductPrice"
        android:hint=" מחיר מוצר"
        />
     <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/etManagerAddProductId"
        android:hint="קוד מוצר"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":כמות במארז "
        android:layout_gravity="right"
        android:textStyle="bold"
        android:textDirection="rtl"
        android:textSize="15sp"
        
        android:textColor="@color/colorAccent"/>

    <Spinner
       
      
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:textDirection="rtl"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerManagerAddProduct" />
    
    
    <Button
        android:text="בחר תמונה"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/colorEditTextHint"
        android:textStyle="bold"
        android:paddingHorizontal="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circlebutton"
        android:layout_gravity="center" 
        android:id="@+id/btnManagerAddProductPickImage"/>
     

    <Button
        android:text="@string/save"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/colorEditTextHint"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="60dp"
        android:background="@drawable/circlebutton"
        android:layout_gravity="center" 
        android:id="@+id/btnManagerAddProductSave"/>


</LinearLayout>