
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/circlelayout"
    android:gravity="center"
    android:weightSum="1"
    >


        <EditText
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textColorHint="@color/colorEditTextHint"
            android:hint= ":שם הלקוח "
            android:drawableLeft="@drawable/iconusername"
            android:gravity="center"
            android:elevation="3dp"
          
            android:drawableTint="@color/white"
            android:background="@drawable/circlebutton"
            android:id="@+id/et_ManagerOrdersDailogAddNewOrderCustomerName"
            />

    
        <EditText
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textColorHint="@color/colorEditTextHint"
            android:hint= "@string/phone_number"
            android:drawableLeft="@drawable/iconphone"
            android:gravity="center"
            android:elevation="5dp"
            android:inputType="phone"
            android:drawableTint="@color/white"
            android:background="@drawable/circlebutton"
            android:id="@+id/et_ManagerOrdersDailogAddNewOrderCustomerPhone"
            />


        <EditText
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textColorHint="@color/colorEditTextHint"
            android:hint= "@string/Address"
            android:drawableLeft="@drawable/icon_home"
            android:gravity="center"
            android:elevation="5dp"
         
            android:drawableTint="@color/white"
            android:background="@drawable/circlebutton"
            android:id="@+id/et_ManagerOrdersDailogAddNewOrderCustomerAddress"
            />

        <EditText
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textColorHint="@color/colorEditTextHint"
            android:hint= "@string/City"
            android:drawableLeft="@drawable/iconlocation"
            android:gravity="center"
            android:elevation="5dp"
      
            android:inputType="text"
            android:drawableTint="@color/white"
            android:background="@drawable/circlebutton"
            android:id="@+id/et_ManagerOrdersDailogAddNewOrderCustomerCity"
            />


        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text= ":מחיר "
            android:drawableLeft="@drawable/iconsettingpay"
            android:gravity="center"
            android:inputType="number"
            android:elevation="5dp"
           
            android:drawableTint="@color/white"
            android:background="@drawable/circlebutton"
            android:id="@+id/tv_ManagerOrdersDailogAddNewOrderOrderTotalPrice"
            />
    

    <ListView
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:layout_marginHorizontal="15dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:id="@+id/listview_ManagerOrdersDailogAddNewOrderCart"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/btn_ManagerOrdersDailogAddNewOrderClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circlebutton"
            android:elevation="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="סגור"
            android:textColor="@color/colorEditTextHint"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            />
        <Button
            android:id="@+id/btn_ManagerOrdersDailogAddNewOrderSaveOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circlebutton"
            android:elevation="3dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/save"
            android:textColor="@color/colorEditTextHint"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            />
    </LinearLayout>
</LinearLayout>