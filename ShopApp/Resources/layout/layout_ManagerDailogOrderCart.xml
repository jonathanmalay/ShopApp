
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Selected Order Cart"
            android:id="@+id/tv_ManagerDialogOrderCartHeader"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginHorizontal="15dp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_ManagerDialogOrderCartClose"
            android:text="x"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewManagerDialogOrderCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:weightSum="1"
        >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/circlebutton"
                android:text="מחק הזמנה"
                android:elevation="7dp"
                android:textColor="@color/colorEditTextHint"
                android:id="btn_ManagerDialogOrderCartDeleteOrder"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text="הזמנה נשלחה"
                android:elevation="7dp"
                android:textColor="@color/colorEditTextHint"
                android:background="@drawable/circlebutton"
                android:id="btn_ManagerDialogOrderCartOrderDone"/>

             <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>