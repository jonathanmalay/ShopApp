<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1">



    

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/circlelayout"
       >
       
         <TextView
        android:text="פרטי אשראי"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center"/>

 

        
            
        
        

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:paddingTop="15dp"
       
        android:background="@drawable/circlelayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edittextbackground">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconsettingpay"
                />
            <EditText
                android:hint="מספר "
                android:textColorHint="@color/colorEditTextHint"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etSettingPaymentCardNum" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextbackground">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_creditcard"
               />
            <EditText
                android:hint="תוקף"
                android:textColorHint="@color/colorEditTextHint"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etSettingPaymentDate" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:layout_marginTop="5dp"
            android:background="@drawable/edittextbackground">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_creditcard_cvv"/>
            <EditText
                android:hint="CVV"
                android:textColorHint="@color/colorEditTextHint"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etSettingPaymentCvv" />

        </LinearLayout>

            <Button
            android:layout_marginHorizontal="10dp"
            android:text="@string/save"
            android:textStyle="bold"
            android:layout_marginTop="25sp"
            android:textColor="@color/white"
            android:background="@drawable/circlebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettingPaymentSave"/>

        </LinearLayout>
        </LinearLayout>

</LinearLayout>