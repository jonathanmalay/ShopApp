<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:elevation="10dp"
        android:background="@drawable/circlelayout">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circlebutton"
            android:elevation="5dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconsbuy"/>
            <Button
                android:text="התחל קנייה"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/btnStartShop"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:elevation="5dp"
            android:background="@drawable/circlebutton"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconsorderhistory"/>
            <Button
                android:text="היסטוריית הזמנות"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/btnPruchesHistory"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/circlebutton"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="5dp"
>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconsettinguser"/>
            <Button
                android:text="מידע אישי"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/btnPrivateInfo"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/circlebutton"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="5dp"
>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconssetting"/>
            <Button
                android:text="הגדרות"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/btnHomeSetting"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:elevation="5dp"
            android:background="@drawable/circlebutton"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/iconphone"/>
            <Button
                android:text="צור קשר"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/btnContectUs"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

