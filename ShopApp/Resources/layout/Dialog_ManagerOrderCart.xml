
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:background="@drawable/circlelayout"
    android:weightSum="1">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.025"/>
        <TextView
            android:text="Selected Order Cart"
            android:id="@+id/tv_ManagerDialogOrderCartHeader"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"/>
        <Button
            android:id="@+id/btn_ManagerDialogOrderCartClose"
            android:text="סגור"
            android:background="@drawable/circlebutton"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginVertical="5dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewManagerDialogOrderCart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:elevation="4dp"
        android:background="@drawable/circlelayout"
        android:layout_gravity="center_horizontal"
        android:layout_margin="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":פרטי אשראי של הלקוח"
        android:layout_gravity="right"
        android:layout_marginHorizontal="12dp"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":מספר אשראי"
        android:layout_gravity="right"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        android:layout_marginRight="12dp"
        android:textDirection="rtl"
        android:id="@+id/tv_ManagerDialogOrderCart_ClientCreditCardNumber"
        />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":תוקף אשראי"
        android:layout_gravity="right"
        android:layoutDirection="rtl"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        android:layout_marginRight="12dp"
        android:textDirection="rtl"
        android:id="@+id/tv_ManagerDialogOrderCart_ClientCreditCardDate"
        />

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":CVV"
        android:layout_gravity="right"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        android:layout_marginRight="12dp"
        android:textDirection="rtl"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_ManagerDialogOrderCart_ClientCreditCardCvv"
        />

    <Switch
        android:id="@+id/switch_manager_dialog_EditOrder_IsSent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:checked="false"
        android:layout_weight="0.125"
        android:gravity="center_vertical"
        android:layout_gravity="right"
        android:textSize="18sp"
        android:layout_marginVertical="12dp"
        android:paddingHorizontal="12dp"
        android:text= "נשלח ללקוח"
        android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.125"
        android:orientation="horizontal"
       
        android:layout_gravity="center_vertical"
        android:weightSum="1"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>

        
    
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circlebutton"
            android:text="מחק הזמנה"
            android:elevation="7dp"
            android:textColor="@color/colorEditTextHint"
            android:id="@+id/btn_ManagerDialogOrderCartDeleteOrder"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="חייג  ללקוח"
            android:layout_gravity="center_vertical"
            android:elevation="7dp"
            android:textColor="@color/colorEditTextHint"
            android:background="@drawable/circlebutton"
            android:id="@+id/btn_ManagerDialogOrderCartCallClient"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>

    </LinearLayout>

</LinearLayout>