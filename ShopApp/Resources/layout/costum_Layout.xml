
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardBackgroundColor="@color/colorListViewCell"
        cardview:cardCornerRadius="10dp"
        cardview:cardElevation="8dp"
        cardview:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/frame_cell"
            android:weightSum="1">

            <ImageView
                
                android:layout_width="100dp"
                android:src="@android:drawable/picture_frame"
                android:layout_height="100dp"
                android:id="@+id/ivProductRaw" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_CellClientOrdeProductName"
                android:textSize="22sp"
                android:text=":שם המוצר"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_CellClientOrdeProductAmount"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text=":כמות"
                android:textColor="@color/colorPrimary" />



            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/tvProductRawPrice"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text=":מחיר" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>